<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="4"
            android:fontFamily="monospace"
            android:gravity="end"
            android:text=""
            android:textColor="@color/white"
            android:textSize="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="6"
            android:id="@+id/output"
            android:gravity="end"
            android:text=""
            android:textColor="@color/white"
            android:textSize="30dp"
            android:fontFamily="monospace"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:columnCount="4"
            android:rowCount="5"
            android:foregroundGravity="center_horizontal">

            <Button
                android:id="@+id/AC"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#C3C9CC"
                android:textSize="26sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="AC" />
            <Button
                android:id="@+id/PD"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#C3C9CC"
                android:textSize="26sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="+/-" />
            <Button
                android:id="@+id/PT"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#C3C9CC"
                android:textSize="26sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="%" />
            <Button
                android:id="@+id/chia"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#FFAB00"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="รท" />
            <Button
                android:id="@+id/so7"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#4D5052"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="7" />
            <Button
                android:id="@+id/so8"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#4D5052"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="8" />
            <Button
                android:id="@+id/so9"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#4D5052"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="9" />
            <Button
                android:id="@+id/nhan"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#FFAB00"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="x" />
            <Button
                android:id="@+id/so4"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#4D5052"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="4" />
            <Button
                android:id="@+id/so5"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#4D5052"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="5" />
            <Button
                android:id="@+id/so6"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#4D5052"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="6" />
            <Button
                android:id="@+id/tru"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#FFAB00"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="-" />
            <Button
                android:id="@+id/so1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#4D5052"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="1" />
            <Button
                android:id="@+id/so2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#4D5052"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="2" />
            <Button
                android:id="@+id/so3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#4D5052"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="3" />
            <Button
                android:id="@+id/cong"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#FFAB00"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="+" />
            <Button
                android:id="@+id/so0"
                android:layout_width="185dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_columnSpan="2"
                android:backgroundTint="#4D5052"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="0" />
            <Button
                android:id="@+id/phay"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#4D5052"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="." />
            <Button
                android:id="@+id/bang"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#FFAB00"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="=" />

        </GridLayout>
    </RelativeLayout>

</LinearLayout>