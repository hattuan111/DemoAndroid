<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp" />

    <EditText
        android:id="@+id/txttk"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:inputType="text"
        android:padding="16dp"
        android:background="@drawable/rounded_edit_text_bg" />

    <EditText
        android:id="@+id/txtmk"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edit_text_bg" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        android:textColor="#052DF6"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:textSize="20dp"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/btnDN"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/baseline_person_add_24"
            android:textColor="#D3CDCD"
            android:backgroundTint="#2649F8"
            android:layout_marginTop="16dp" />
        <Button
            android:id="@+id/btnDK"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/baseline_person_add_24"
            android:textColor="#D3CDCD"
            android:backgroundTint="#2649F8"
            android:layout_marginTop="16dp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoặc đăng nhập bằng"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/facebook"
            android:backgroundTint="#FDFDFD"
            android:contentDescription="@string/facebook"/>
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/google"
            android:backgroundTint="#FDFDFD"
            android:contentDescription="@string/google"/>
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/instagram"
            android:backgroundTint="#FDFDFD"
            android:contentDescription="@string/intagram"/>
    </LinearLayout>

</LinearLayout>